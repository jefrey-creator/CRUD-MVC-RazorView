@model IEnumerable<ProjectManagementSystem.Models.ProjectModel>

@{
    ViewBag.Title = "Project List";
}

<h2 class="mt-3 mb-3">@ViewBag.Title</h2>

@Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary mb-3" })

<div class="mt-2 mb-2">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (TempData["400"] != null)
    {
        <div class="alert alert-danger">@TempData["400"]</div>
    }

    @if (TempData["404"] != null)
    {
        <div class="alert alert-warning">@TempData["404"]</div>
    }
</div>
<div class="row">
    <div class="col-lg-12 col-sm-12 col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-borderless">
                <tr>
                    <th>
                        Project Name
                    </th>
                    <th>
                        Project Cost
                    </th>
                    <th>
                        Status
                    </th>
                    <th>Actions</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(e => item.ProjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(e => item.ProjectCost)
                        </td>
                        <td>
                            @(item.ProjectStatus == 1 ? "Done" : "In - progress")
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.ProjectId }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>