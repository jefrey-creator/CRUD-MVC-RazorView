@model ProjectManagementSystem.Models.ProjectModel

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-danger">Delete</h2>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.ProjectName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Project Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectName)
        </dd>

        <dt>
            Project Cost
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectCost)
        </dd>

        <dt>
            Project Status
        </dt>

        <dd>
            @if (Model.ProjectStatus == 1)
            {
                @:Done
            }
            else if (Model.ProjectStatus == 0) // Add more conditions as needed
            {
                @:In Progress
            }
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <a href="/Project/Index" class="btn btn-secondary" role="button" title="Back to list">
            <i class="bi bi-arrow-left-short"></i> Back to List
        </a>
        <button class="btn btn-danger" type="submit">Confirm Delete</button>
    }
</div>
